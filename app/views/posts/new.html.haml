%h2 New Post
#preview_container.hidden
  %h1#preview_title.post-title
  #preview_date.post-date=Time.current.strftime("%B %d, %Y")
  #preview_content.post-content

= form_for @post do |f|
  .form-group
    = f.label 'Title'
    = f.text_field 'title', :class => 'form-control'
  .form-group
    = f.label 'Content'
    = f.text_area 'content', :class => 'form-control'
  .form-group
    = f.submit 'Submit', :class => 'btn btn-primary'
    = link_to 'Preview', '#', :remote => true, :id => 'post_preview', :class => 'btn btn-success'
