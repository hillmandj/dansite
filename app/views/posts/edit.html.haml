%h2#post-header Edit Post
= render partial: 'preview'
= form_for @post do |f|
  .form-group
    = f.label 'Title'
    = f.text_field 'title', class: 'form-control'
  .form-group
    = f.label 'Content'
    = f.text_area 'content', class: 'form-control'
  .form-group
    = f.submit 'Update', :class => 'btn btn-primary'
    = link_to 'Preview', '#', remote: true, id: 'post-preview', class: 'btn btn-success'
