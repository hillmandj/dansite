<!DOCTYPE html>
<html>
<head>
  <title>Daniel Hillman</title>
  <%= google_webfonts_init({google: ['Droid Serif', 'Roboto', 'Rokkitt','Open Sans', 'Raleway', 'Lato']}) %>
  <%= favicon_link_tag 'icons/danicon-32x32.png', :rel => 'icon', :sizes => '32x32', :type => 'image/png' %>
  <%= favicon_link_tag 'icons/danicon-96x96.png', :rel => 'icon', :sizes => '96x96', :type => 'image/png' %>
  <%= favicon_link_tag 'icons/danicon-16x16.png', :rel => 'icon', :sizes => '16x16', :type => 'image/png' %>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body class="<%= controller_name %> <%= action_name %>">
 <div id='blog-content'>
  <div id='sidebar' class='pull-left'>
    <div id='sidebar-brand'>
        <a href=<%= root_url %>><span id='first-name'>Daniel</span><span id='last-name'> Hillman</span></a>
    </div>
    <ul id='sidebar-nav'>
      <li id='foreign-links'>
        <a href='http://github.com/hillmandj' target='_blank'><i class='fa fa-github'></i></a>
        <a href='http://facebook.com/hillmandj' target='_blank'><i class='fa fa-facebook'></i></a>
        <a href='http://linkedin.com/in/hillmandj' target='_blank'><i class='fa fa-linkedin'></i></a>
      </li>
      <li><a href=<%= posts_path %>>Posts</a></li>
      <li><a href=<%= about_url %>>About</a></li>
      <li>
          <% if user_signed_in? %>
            <%= link_to drafts_path do %>
              Drafts (<span id='drafts-count'><%= @draft_count %></span>)
            <% end %>
            <br/>
            <%= link_to 'Settings', edit_user_registration_path %>
            <br/>
            <%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
          <% else %>
            <%= link_to 'Login', new_user_session_path %>
          <% end %>
      </li>
    </ul>
  </div>
  <div id='blog-main' class='pull-left'>
    <%= yield %>
  </div>
</div>
</body>
</html>

